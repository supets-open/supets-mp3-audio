<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
   </style>

    <style name="ShareDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/ShareDialogAnimation</item>
    </style>
    <style name="ShareDialogAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/share_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/share_dialog_exit</item>
    </style>

</resources>
